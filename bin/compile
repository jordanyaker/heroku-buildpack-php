#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.25"
APACHE_PATH="apache"
PHP_VERSION="5.3.10"
PHP_PATH="php"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

# install apache if needed
APACHE_URL="https://s3-us-west-2.amazonaws.com/respage-buildpacks/apache-2.2.25.tar.gz"
echo "-----> Bundling Apache v$APACHE_VERSION"
curl --silent --max-time 60 --location $APACHE_URL | tar xz

# make it a little leaner
rm -rf /app/apache/manual/

# install php if needed
PHP_URL="https://s3-us-west-2.amazonaws.com/respage-buildpacks/php-5.3.10.tar.gz"
echo "-----> Bundling PHP v$PHP_VERSION"
curl --silent --max-time 60 --location $PHP_URL | tar xz

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php
cp $LP_DIR/conf/custom.cnf .my.cnf

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php
ln -s /app/php/bin/pear bin/pear

# install extra PEAR packages.

cat >>boot.sh <<EOF
echo "Installing PEAR Packages"
exec /app/php/bin/pear install --soft Mail
exec /app/php/bin/pear install --soft Net_SMTP
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext:/app/apache/lib
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR
